  <% include ./partials/header %>

  <% include ./partials/navbar %>

  <div class="ui main text container segment">
    <div class="ui huge header">Edit</div>
    <form class="ui form" action="/links/<%= blog._id %>?_method=PUT" method="POST">
      <div class="field">
        <label>Title</label>
        <input type="text" name="blog[url_text]" value="<%= blog.url_text %>" required />
      </div>
      <div class="field">
        <label>Category</label>
        <span class="custom-dropdown">
          <select name="blog[category]" value="<%= blog.category %>" id='nnnn'>
              <option value='general'>General</option>
              <option value='webdesign'>Web Design</option>
              <option value='javascript'>JavaScript</option>
              <option value='tools'>Tools</option>
              <option value='git'>Git</option>
              <option value='interview'>Interview</option>
              <option value='youtube'>Youtube</option>
              <option value='random'>Random</option>
          </select>
        </span>
      </div>
      <div class="field">
        <label>URL</label>
        <input type="url" name="blog[url]" value="<%= blog.url %>" required />
      </div>
      <div class="field">
        <label>Link Description</label>
        <textarea name="blog[desc]" required><%= blog.desc %></textarea>
      </div>

    <input class="ui violet big basic button" type="submit" />
    </form>
  </div>

<% include ./partials/footer %>