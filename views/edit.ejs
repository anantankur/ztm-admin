  <% include ./partials/header %>



  <div class="ui secondary menu">
    <div class="ui container">
      <div class="header item"><i class="code"></i>Zero To Mastery</div>

        <a href="/links" class="item">Home</a>
        <a href="/links/new" class="item">Add Resource</a>
        <div class="right menu">
          <span class="custom-dropdown">
            <select id='nnnn'>
              <option id='all'><a href='#'>All</a></option>
              <option id='random'>Random</option>
              <option id='general'>General</option>
              <option id='webd'>Web Design</option>
            </select>
          </span>
          <a href="/logout" class="ui item">
            logout
          </a>
        </div>
      
    </div>
  </div>




  <div class="ui main text container segment">
    <div class="ui huge header">Edit</div>
    <form class="ui form" action="/links/<%= blog._id %>?_method=PUT" method="POST">
      <div class="field">
        <label>Title</label>
        <input type="text" name="blog[url_text]" value="<%= blog.url_text %>" />
      </div>
      <div class="field">
        <label>Category</label>
        <span class="custom-dropdown">
          <select name="blog[category]" value="<%= blog.category %>" id='nnnn'>
              <option value='random'>Random</option>
              <option value='general'>General</option>
              <option value='webd'>Web Design</option>
          </select>
        </span>
      </div>
      <div class="field">
        <label>URL</label>
        <input type="url" name="blog[url]" value="<%= blog.url %>" required />
      </div>
      <div class="field">
        <label>Link Description</label>
        <textarea name="blog[desc]"><%= blog.desc %></textarea>
      </div>

    <input class="ui violet big basic button" type="submit" />
    </form>
  </div>

<% include ./partials/footer %>