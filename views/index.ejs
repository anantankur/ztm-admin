<% include ./partials/header %>

<% /* navbar specifically for index route starts */ %>
  <div class="ui secondary menu">
    <div class="ui container">
      <div class="header item"><i class="code"></i>Zero To Mastery</div>

        <a href="/links" class="item">Home</a>
        <a href="/links/new" class="item">Add Resource</a>
        <div class="right menu">
          <div class="dropdown">
            <button class="dropbtn">Category</button>
            <div class="dropdown-content">
              <a href="/links/">All</a>
              <a href="/links/filter/?category=general">General</a>
              <a href="/links/filter/?category=random">Random</a>
              <a href="/links/filter/?category=webdesign">Web Design</a>
            </div>
          </div>
          <a href="/logout" class="ui item">
            logout
          </a>
        </div>
      
    </div>
  </div>
<% /* navbar ends */ %>



<div class="ui main text container">
  <div class="ui huge header">Zero-To-Mastery Resources</div>
  <div class="ui top attached segment">
    <div class="ui divided items">
      <% blogs.forEach(function(el){ %>
        <div class="item">
          <div class="content">
              <a class="header" href="/links/<%= el._id %>/edit"><%= el.url_text %></a>
              <div class="descrption">
                  <p>URL: -> <%- el.url.substring(0, 100) %>...</p>
                  <p>category: -> <%= el.category %></p>
                  <p>URL Description: -> <%- el.desc.substring(0, 100) %>...</p>
              </div>
              <div class="extra">
                     <a class="ui orange basic button" href="/links/<%= el._id %>/edit">Edit</a>
                  <form id="delete" action="/links/<%= el._id %>?_method=DELETE" method="POST">
                    <button class="ui red basic button">Delete</button>
                  </form>
              </div>
          </div>
        </div>
      <% }); %>
    </div>
  </div>
</div>

<% include ./partials/footer %>